{
  "compilerOptions": {
    "target": "es6", // 컴파일된 코드가 실행될 ECMAScript 버전
    "module": "commonjs", // 모듈 시스템
    "outDir": "./dist", // 컴파일된 파일이 저장될 디렉토리
    "rootDir": "./src", // 소스 파일이 위치한 디렉토리
    "strict": true, // 엄격한 타입 체크 활성화
    "esModuleInterop": true, // ES6 모듈 사양 준수
    "skipLibCheck": true, // 선언 파일의 타입 체크 건너뛰기
    "forceConsistentCasingInFileNames": true, // 파일 이름의 대소문자 일관성 강제
    "experimentalDecorators": true, // 데코레이터 사용 허용
    "emitDecoratorMetadata": true // 데코레이터 메타데이터 출력
  },
  "include": ["src/**/*"], // 컴파일할 파일들
  "exclude": ["node_modules", "dist"] // 컴파일에서 제외할 파일들
}
